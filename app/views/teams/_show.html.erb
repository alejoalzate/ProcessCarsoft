<div class="responsive">

    <div class="modal-header">
         <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="$.lazybox.close()">&times;</button>
         <h3>Datos Vehiculos</h3>
    </div>

    <div class="modal-body">

        <p id="notice"><%= notice %></p>

        <table class="table table-striped table-condensed">
            <tr>
               <td><b class="pull-right">Nombre: </b></td>
               <td><%= @team.name %></td>
            </tr>
            <tr>
               <td><b class="pull-right">Serial: </b></td>
               <td><%=  @team.serial%></td>
            </tr>
            <tr>
               <td><b class="pull-right">Mouse: </b></td>
               <td><%= @team.accessory %></td>
            </tr>
            <tr>
               <td><b class="pull-right">Color: </b></td>
               <td><%= @team.color %></td>
            </tr>
            <tr>
               <td><b class="pull-right">Tipos de materiales: </b></td>
               <td><%= @team.type_material.name %></td>
            </tr>

             <tr>
               <td><b class="pull-right">Registro: </b></td>
               <td><%= @team.porter.name %></td>
            </tr>

             <tr>
               <td><b class="pull-right">Pertenece: </b></td>
               <td><%=  @team.user.name %></td>
            </tr>
            
        </table>

        <div class="modal-footer">
            <a href="#" class="btn" onclick="$.lazybox.close()">Cerrar</a>
        </div>

    </div>
    
</div>

