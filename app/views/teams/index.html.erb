<%- model_class = Team -%>
  <div class="page-header">
    <h1 class="fondo" >Equipos</h1>
     <div class="navbar">
    <div class="navbar-inner">
    <li id='buscar' class="brand" href="#">Buscar</li> 
      <div class="row">
        <div class="span6">
          <form method="GET" class="form-inline" >
            <input id='buscar' name="buscar" class="search-query" type="text"  placeholder="Buscar" >
            <a  rel="tooltip" title="Ingresar datos a buscar"><button id='buscar' type="submit" class="btn btn-primary"><i class="icon-search icon-white"></i></button></a>
          </form>
        </div>
      </div>
    </div>
  </div>
  </div>
  
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th>Id</th>
            <th>Nombre</th>
            <th>Serial</th>
            <th>Accessorios</th>
            <th>color</th>
            <th>Tipo Material</th>
            <th>Portero</th>
            <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
       <%= render @teams %>
      </tbody>
      <tfoot>
        <tr>
          <td><%= link_to image_tag('team.png'), new_user_team_path, :remote => true,  :rel => "tooltip", :title => "Ingresar Equipos", :class => 'btn btn-mini btn-prymary'  %> </td>
              <td><%= link_to image_tag("atras.png"), users_path, :class => 'btn btn-mini', :rel => "tooltip", :title => "Regresar a Usuarios" %></td>
        </tr>
      </tfoot>
    <tfoot>
          <tr>
              <td><b >Total Usuarios:</b></td>
            <td>
                <input type="text"  id="totalregs" class="span1" value="<%= @teams.total_entries %>" readonly />
            </td>
          </tr>
      </tfoot>
    </table>
  </div>
    </table>
      <div align="center">
        <div id="pagination" class="pagination">
          </ul>
              <%= will_paginate @teams, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente&raquo;' %>
          </ul>
        </div>
      </div>

