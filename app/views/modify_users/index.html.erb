<%- model_class = ModifyUser -%>
  <div class="page-header">
    <h1 class="fondo">Modificacion usuarios</h1>
      <div class="navbar">
    <div class="navbar-inner">
    <li id='buscar' class="brand" href="#">Buscar</li> 
      <div class="row">
        <div class="span6">
          <form method="GET" class="form-inline" >
            <input id='buscar' name="buscar" class="search-query" type="text"  placeholder="Buscar" >
            <a  rel="tooltip" title="Ingresar datos Click en Buscar"><button id='buscar' type="submit" class="btn btn-primary"><i class="icon-search icon-white"></i></button></a>
          </form>
        </div>
      </div>
    </div>
  </div>
  </div>
  
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
            <th>Id</th>
            <th>Cambiar</th>
            <th>Descripciones</th>
            <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
       <%= render @modify_users %>
      </tbody>
      <tfoot>
        <tr>
         <td><%= link_to image_tag("nuevo.png"), new_user_modify_user_path, :remote => true,  :rel => "tooltip", :title => "Ingresar Modificaciones", :class => "btn btn-mini"  %> </td>
              <td><%= link_to image_tag("atras.png"), users_path,  :rel => "tooltip", :title => "Regresar Usuarios", :class => "btn btn-mini" %></td>
        </tr>

      </tfoot>
    <tfoot>
          <tr>
              <td><b >Total Modificaciones:</b></td>
            <td>
                <input type="text"  id="totalregs" class="span1" value="<%= @modify_users.total_entries %>" readonly />
            </td>
          </tr>
      </tfoot>
    </table>
  </div>
  
      <div align="center">
        <div id="pagination" class="pagination">
          </ul>
              <%= will_paginate @modify_users, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente&raquo;' %>
          </ul>
        </div>
      </div>

