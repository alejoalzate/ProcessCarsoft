<div class="responsive">

    <div class="modal-header">
         <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="$.lazybox.close()">&times;</button>
         <h3>Datos Modificaciones </h3>
    </div>

    <div class="modal-body">

        <p id="notice"><%= notice %></p>

        <table class="table table-striped table-condensed">
            <tr>
               <td><b class="pull-right">Cambios: </b></td>
               <td><%=  @modify_user.change %></td>
            </tr>
            <tr>
               <td><b class="pull-right">Usuario: </b></td>
               <td><%= @modify_user.user.name %></td>
            </tr>
            <tr>
               <td><b class="pull-right">Descripciones: </b></td>
               <td><%= @modify_user.description %></td>
            </tr> 
        </table>

        <div class="modal-footer">
            <a href="#" class="btn" onclick="$.lazybox.close()">Cerrar</a>
        </div>

    </div>
    
</div>