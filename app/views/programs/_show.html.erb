<div class="responsive">

    <div class="modal-header">
         <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="$.lazybox.close()">&times;</button>
         <h3>Datos</h3>
    </div>

    <div class="modal-body">

        <p id="notice"><%= notice %></p>

        <table class="table table-striped table-condensed">
            <tr>
               <td><b class="pull-right">Programa: </b></td>
               <td><%= @program.name %></td>
            </tr>
            <tr>
               <td><b class="pull-right">Ficha: </b></td>
               <td><%= @program.code %></td>
            </tr>
            <tr>
               <td><b class="pull-right">Usuario: </b></td>
               <td><%= @program.user.name %></td>
            </tr>
            
        </table>

        <div class="modal-footer">
            <a href="#" class="btn" onclick="$.lazybox.close()">Cerrar</a>
        </div>

    </div>
    
</div>