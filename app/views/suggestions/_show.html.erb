<div class="responsive">

    <div class="modal-header">
         <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="$.lazybox.close()">&times;</button>
         <h3>Datos Sugerencias</h3>
    </div>

    <div class="modal-body">

        <p id="notice"><%= notice %></p>

      
        <table class="table table-striped table-condensed">
            <tr>
               <td><b class="pull-right">Nombre: </b></td>
               <td><%= @suggestion.name %></td>
               <td><b class="pull-right">Apellido: </b></td>
               <td><%= @suggestion.surname %></td>
            </tr>
           
            <tr>
               <td><b class="pull-right">Documento: </b></td>
               <td><%= @suggestion.document.name %></td>
               <td><b class="pull-right">Numero: </b></td>
               <td><%= @suggestion.number_identification %></td>
            </tr>
           
            <tr>
               <td><b class="pull-right">Telefono: </b></td>
               <td><%= @suggestion.phone %></td>
                <td><b class="pull-right">Celular: </b></td>
               <td><%= @suggestion.movil %></td>
            </tr>
       
            <tr>
               <td><b class="pull-right">Sugerencia: </b></td>
               <td><%= @suggestion.suggestion %></td>
            </tr>
            
        </table>

        <div class="modal-footer">
            <a href="#" class="btn" onclick="$.lazybox.close()">Cerrar</a>
        </div>

    </div>
    
</div>
