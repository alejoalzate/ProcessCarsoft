<%= simple_form_for(@type_user, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>

    <%= f.error_notification %>
    <%= display_base_errors  @type_user %>

	<p><%= f.input :name, :label => "Nombre",  :required => true   %><p>
	<p><%= f.input :acronym, :label => "Sigla",  :required => true   %><p>
	<p><%= f.input :description, :label => "Descripcion",  :required => true   %><p>

    <div class="form-actions">
      <%= f.submit "guardar", :class => 'btn btn-primary' %>
      <a href="#" class="btn" onclick="$.lazybox.close()">Cerrar</a>
    </div>
<% end %>
