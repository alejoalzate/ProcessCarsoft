<div class="responsive">

    <div class="modal-header">
         <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="$.lazybox.close()">&times;</button>
         <h3>Datos Documentos </h3>
    </div>

    <div class="modal-body">

        <p id="notice"><%= notice %></p>

        <table class="table table-striped table-condensed">
            <tr>
               <td><b class="pull-right">ID: </b></td>
               <td><%=   @document.id  %></td>
               
            </tr>

               <tr>
           <td><b class="pull-right">Nombre: </b></td>
               <td><%= @document.name %></td>
         
            </tr>

             <tr>
               <td><b class="pull-right">Sigla: </b></td>
               <td><%=   @document.initials %></td>
         
            </tr>
         
        </table>

        <div class="modal-footer">
            <a href="#" class="btn" onclick="$.lazybox.close()">Cerrar</a>
        </div>

    </div>
    
</div>