<div class="responsive">

    <div class="modal-header">
         <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="$.lazybox.close()">&times;</button>
         <h3>Datos Materiales</h3>
    </div>

    <div class="modal-body">

        <p id="notice"><%= notice %></p>

        <table class="table table-striped table-condensed">
            <tr>
               <td><b class="pull-right">Nombre: </b></td>
               <td><%= @material.name %></td>
            </tr>
            <tr>
               <td><b class="pull-right">Tipo Material: </b></td>
               <td><%= @material.type_material.name %></td>
            </tr>
            <tr>
               <td><b class="pull-right">Usuarios pertenece: </b></td>
               <td><%=  @material.user.name %></td>
            </tr>
            <tr>
               <td><b class="pull-right">Descripcion: </b></td>
               <td><%=  @material.description %></td>
            </tr>
           
        </table>

        <div class="modal-footer">
            <a href="#" class="btn" onclick="$.lazybox.close()">Cerrar</a>
        </div>

    </div>
    
</div>