<div class="responsive">

    <div class="modal-header">
         <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="$.lazybox.close()">&times;</button>
         <h3>Responsable</h3>
    </div>

    <div class="modal-body">
     
        <p id="notice"><%= notice %></p>
        <table class="table table-striped table-condensed">
            <tr>
               <td><b class="pull-right">ID: </b></td>
               <td><%= @responsible.id  %></td>
            </tr>
            <tr>
               <td><b class="pull-right">Usuario: </b></td>
               <td><%= @responsible.user.name %></td>
            </tr>
             <tr>
               <td><b class="pull-right">Telefono: </b></td>
               <td><%= @responsible.name %></td>
            </tr>
            <tr>
               <td><b class="pull-right">Telefono: </b></td>
               <td><%= @responsible.phone %></td>
            </tr>
            <tr>
               <td><b class="pull-right">Telefono: </b></td>
               <td><%= @responsible.extension %></td>
            </tr>
           
        </table>

        <div class="modal-footer">
            <a href="#" class="btn" onclick="$.lazybox.close()">Cerrar</a>
        </div>

    </div>
    
</div>