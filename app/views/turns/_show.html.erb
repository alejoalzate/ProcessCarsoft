<div class="responsive">

    <div class="modal-header">
         <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="$.lazybox.close()">&times;</button>
         <h3>Datos Turnos</h3>
    </div>

    <div class="modal-body">

        <p id="notice"><%= notice %></p>
        <table class="table table-striped table-condensed">
            <tr>
               <td><b class="pull-right">Ide: </b></td>
               <td><%= @turn.id %></td>
               <td><b class="pull-right">Turno: </b></td>
               <td><%= @turn.day %></td>
            </tr>
            <tr>
               <td><b class="pull-right">H.Inicio: </b></td>
               <td><%= @turn.start_time %></td>
               <td><b class="pull-right">H.Final: </b></td>
               <td><%= @turn.finish_time %></td>
            </tr>
            <tr>
               <td><b class="pull-right">F.Inicio: </b></td>
               <td><%= @turn.start_date %></td>
               <td><b class="pull-right">F.Final: </b></td>
               <td><%= @turn.finish_date %></td>
            </tr> 
        </table>

        <div class="modal-footer">
            <a href="#" class="btn" onclick="$.lazybox.close()">Cerrar</a>
        </div>

    </div>
    
</div>