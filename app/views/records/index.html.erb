<%- model_class = Record -%>
  <div id="admin1"class="page-header">
    <h1 class="fondo">Registros</h1>
     <div class="navbar">
    <div class="navbar-inner">
    <li id='buscar' class="brand" href="#">Buscar</li> 
      <div class="row">
        <div class="span6">
          <form method="GET" class="form-inline" >
            <input id='buscar' name="buscar" class="search-query" type="text"  placeholder="Buscar" >
            <button id='buscar' type="submit" class="btn btn-primary"><i class="icon-search icon-white"></i></button>
          </form>
        </div> 
      </div>
    </div>
  </div>
  <div id="pdf"><%= link_to  image_tag('pdf.png'), records_path(:format => :pdf), :class => 'btn btn-mini', :rel => "tooltip", :title => "Imprimir Registros" %>
  </div>
  </div>
   
    <table class="table table-hover">
      <thead>
        <tr>
            <th>Id</th>
            <th>Fecha</th>
            <th>Hora</th>
            <th>Cantidad</th>
            <th>procedencia</th>
            <th>Destino</th>
            <th>Centros</th>
            <th>Vehiculos</th>
            <th>Acciones</th>
          </tr>
      </thead>
      <tbody>
       <%= render @records %>
      </tbody>
      <tfoot>
        <tr>
          <td><%= link_to image_tag('nuevo.png', :tile  => "Mostrar Equipos"),  new_record_path,  :remote => true %></td>  
        </tr>
      </tfoot>
      <tfoot>
          <tr>
              <td><b >Total Registros:</b></td>
            <td>
                <input type="text"  id="totalregs" class="span1" value="<%= @records.total_entries %>" readonly />
            </td>
          </tr>
      </tfoot>
    </table>
  </div>
    </table>
      <div align="center">
        <div id="pagination" class="pagination">
          </ul>
              <%= will_paginate @records, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente&raquo;' %>
          </ul>
        </div>
      </div>

