<div class="responsive">

    <div class="modal-header">
         <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="$.lazybox.close()">&times;</button>
         <h3>Datos Usuario</h3>
    </div>

    <div class="modal-body">
     
        <p id="notice"><%= notice %></p>

        <p><%= image_tag @user.avatar.url(:thumb) %></p>
        <table class="table table-striped table-condensed">
            <tr>
               <td><b class="pull-right">Nombre: </b></td>
               <td><%= @user.name %></td>
            </tr>
            <tr>
               <td><b class="pull-right">Identificacion: </b></td>
               <td><%= @user.identification %></td>
            </tr>
            <tr>
               <td><b class="pull-right">Direccion: </b></td>
               <td><%= @user.address_residence %></td>
            </tr>
            <tr>
               <td><b class="pull-right">Telefono: </b></td>
               <td><%= @user.phone %></td>
            </tr>
            <tr>
               <td><b class="pull-right">Celular: </b></td>
               <td><%= @user.movil %></td>
            </tr>
            <tr>
               <td><b class="pull-right">Email: </b></td>
               <td><%= @user.email %></td>
            </tr>
            <tr>
               <td><b class="pull-right">Genero: </b></td>
               <td><%= @user.gender %></td>
            </tr>
            <tr>
               <td><b class="pull-right">Centro: </b></td>
               <td><%= @user.center_name %></td>
            </tr>
            <tr>
               <td><b class="pull-right">Rh: </b></td>
               <td><%= @user.rh.name %></td>
            </tr>
        </table>

        <div class="modal-footer">
            <a href="#" class="btn" onclick="$.lazybox.close()">Cerrar</a>
        </div>

    </div>
    
</div>